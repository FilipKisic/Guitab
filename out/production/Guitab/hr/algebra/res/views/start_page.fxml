<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="675.0" prefWidth="1200.0" stylesheets="@../css/start_page.css" xmlns="http://javafx.com/javafx/8.0.202"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.algebra.controllers.StartPageController">
    <ImageView fitHeight="675.0" fitWidth="450.0" layoutX="750.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/Slash_cover.png"/>
